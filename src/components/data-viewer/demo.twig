<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=yes">
    <title>Resource viewer demo</title>
    <link rel="stylesheet" href="../css/index.css">
</head>
<body>
<div id="app">
    <demo title="Resource viewer" v-bind:directions="{{ directions|json_encode|escape }}">
        {% for resource in resources %}
            <div slot="content" class="demo-content">
                <h3>{{ resource.title }}</h3>
                <div class="demo-data-viewer">
                    <demo-data-viewer inline-template>
                        <data-viewer :data="{{ resource.data|json_encode|escape }}" :lang="'{{ resource.lang }}'"></data-viewer>
                    </demo-data-viewer>
                </div>
            </div>
        {% endfor %}
    </demo>
</div>
<script src="../js/index.js"></script>
</body>
</html>
